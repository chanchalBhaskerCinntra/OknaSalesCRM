                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="NA"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Potential Amount"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/tvClientBudget"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/size_8"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Type"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/type_value"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/size_10"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/bottom_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="@string/created_by"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/createdby_date"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="@string/modified_by"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/modified_on"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Probability"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />

                                    <TextView
                                        android:id="@+id/tvProbability"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        android:visibility="visible" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Lead Source"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/lead_source_value"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Sales Employee"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/opportunity_owner_value"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Stage Comment"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_14" />


                                    <TextView
                                        android:id="@+id/stage_value"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text="Description"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_15" />


                                    <TextView
                                        android:id="@+id/tvRemarks"
