                                        android:layout_height="wrap_content"
                                        android:layout_weight="50"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/muli_regular"
                                        android:maxLines="1"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                </LinearLayout>


                                <LinearLayout
